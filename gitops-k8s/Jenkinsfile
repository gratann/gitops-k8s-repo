pipeline {
    agent any

    stages {
        stage('Clone GitOps YAML') {
            steps {
                git 'https://github.com/gratann/gitops-k8s-repo.git'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat 'kubectl apply -f deployment.yaml'
                bat 'kubectl apply -f service.yaml'
            }
        }
    }
}
